<Window x:Class="Superheroes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Superheroes"
        mc:Ignorable="d"
        Title="SuperHeroe" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <DockPanel  DockPanel.Dock="Top" Background="{Binding }">
            <TextBlock DockPanel.Dock="Left" Text="{Binding Path=Nombre, UpdateSourceTrigger=PropertyChanged}" x:Name="NombreS"></TextBlock>
            <TextBlock DockPanel.Dock="Right" ></TextBlock>
        </DockPanel>

        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content=" anterior " Click="anterior"></Button>
            <TextBlock x:Name="contadorS" Text="{Binding Path=contadorS, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
            <Button Content="siguinte" Click="siguiente"></Button>
        </WrapPanel>
        <Image x:Name="img" Stretch="UniformToFill" Source="{Binding Path=Imagen, UpdateSourceTrigger=PropertyChanged}" Margin="10"></Image>
    </DockPanel>
</Window>
